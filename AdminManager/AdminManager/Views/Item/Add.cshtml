@using AdminManager.Models
@using System.Globalization
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Thêm sản phẩm</h1>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 style="color:@ViewBag.MesColor">@ViewBag.Mes</h4>
                    </div>
                    @using (Html.BeginForm("AddItem", "Item", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">
                            <div class="form-group">
                                <label>Tên</label>
                                <input name="model.Name" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Giá</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            $
                                        </div>
                                    </div>
                                    <input name="model.Price" type="number" class="form-control currency">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <input name="model.Description" type="text" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Danh mục</label>
                                <select name="model.CategoryId" class="form-control">
                                    @foreach (var item in (List<DescriptionViewModel>)ViewBag.Categories)
                                    {
                                        <option class="form-control" value="@item.Id">@item.Description</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Ảnh</label>
                                <input name="model.Images" type="file" multiple class="form-control" accept="image/png, image/jpeg">
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-primary">Thêm</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>